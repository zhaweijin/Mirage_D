<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget61"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="100dip" >

        <RelativeLayout
            android:id="@+id/layout_repreat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/repreat"
                style="@style/common_image_size"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_repeat"
                >
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_shuffle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/shuffle"
                style="@style/common_image_size"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_shuffle">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_older"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/older"
                style="@style/common_image_size"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_older" >
            </Button>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_mute"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mute"
                style="@style/common_image_size"
                android:layout_centerInParent="true"
                android:background="@drawable/music_nomute">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
